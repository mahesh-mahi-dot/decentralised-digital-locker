<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BBCS</title>

    <link rel="icon" href="images/favicon.png" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">

    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> 

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    <style>
        input[type="text"] {
            padding: 8px;
            border: 1px solid #e4ecf2;
        }
        .login-text{
            font-weight: 700;
            font-size: 26px;
        }
        .btn-login{
            border: 1px solid #ff6e54;
            background-color: #ff6e54;
            color: #fff;
            font-weight: 500;
        }
        .btn-login:hover{
            border: 1px solid #ff5a3c;
            background-color: #ff5a3c;
            color: #fff;
        }
        .btn-social{
            border: 1px solid #ff6e54;
            font-weight: 500;
        }
        .btn-social:hover{
            border: 1px solid #ff5a3c;
            background-color: #ff5a3c;
            color: #fff;
        }
        .alert
        {
            padding: 8px;
        }
    </style>

  </head>
  <body>

    <!-- Header Start -->
    <%- include('partials/header.ejs')%>
    <!-- Header End -->


    <!--- breadcrumb Section Start ---->
    
    <div class="breadcrumb-section" style="background-image:url(/images/16.jpg);">
        <nav aria-label="breadcrumb">
          <h3>Update Password</h3>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Update Password</li>
          </ol>
        </nav>
    </div> 
    
    <!--- breadcrumb Section End -->


    <!--- Contact Section Start ---->
      <div class="container pt-50 pb-50">
          <div class="row d-flex justify-content-center">
              <div class="col-lg-5">
                <div class="card py-5 px-4 contact-box">
                    <div class="pb-4">
                        <h4 class="text-center text-uppercase login-text">Update Password</h4>
                    </div>

                    <% if(typeof errors!= 'undefined'){ %>
                        <% errors.forEach( error => { %>
                        <span class="alert alert-warning error-msg"><%= error.msg %></span> 
                        <% }) %>
                    <% } %>

                    <% if(typeof success!= 'undefined'){ %> 
                        <div class="alert alert-success"><%= success %> </div>
                    <% } %> 

                    <% if(typeof error_msg!= 'undefined'){ %> 
                        <div class="alert alert-warning"><%= error_msg %> </div>
                    <% } %>

                    <div class="card-body">
                        
                        <form action="/update/<%= userid %>" method="POST" name="Form" onsubmit="return contactvalidation()" autocomplete="off">
                          <div class="row">
                              <!-- <input type="hidden" name="userid" value="<%= userid %>">  -->
                              <div class="col-lg-12">
                                  <div class="mb-2">
                                    <input type="password" class="form-control" name="password" placeholder="Enter Password">
                                    <span class="text-danger px-3 py-1 fst-normal" id="passErr"></span>
                                  </div>
                              </div>

                              <div class="col-lg-12">
                                <div class="mb-3">
                                  <input type="password" class="form-control" name="cpassword" placeholder="Enter Confirm Password">
                                  <span class="text-danger px-3 py-1 fst-normal" id="cpassErr"></span>
                                </div>
                            </div>

                              <div class="mb-3">
                                <!-- <button class="default-btn-1">Get a Free Service</button> -->
                                <button class="btn btn-login" style="width: 100%;">Login Now</button>
                              </div>
                              <p class="text-center">Already a member? <a href="/login" class="px-2"><u>Sign In Free</u></a></p>

                          </div>
                        </form>
                    </div>
                </div>
              </div>
          </div>
          
      </div>
    <!--- Contact Section End ---->

    <!-- Footer Section --->
    <%- include('partials/footer.ejs')%>
    <!-- Footer Section --->


    <!-- Scripts -->

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <script type="text/javascript">

        function contactvalidation()
        {
            let cpassword = document.Form.cpassword.value;
            let password = document.Form.password.value;

            let cpassErr = passErr  =  true;


            if(password == "")
            {
                document.getElementById('passErr').innerHTML = "* Please Enter Password";
            }
            else
            {
                if(password.length < 5)
                {
                    document.getElementById('passErr').innerHTML = "* Password Atleast 5 Character";
                } 
                else
                {
                    document.getElementById('passErr').innerHTML = "";
                    passErr = false;
                }
            }

            if(cpassword == "")
            {
                document.getElementById('cpassErr').innerHTML = "* Please Enter Password";
            }
            else
            {
                if(cpassword.length < 5)
                {
                    document.getElementById('cpassErr').innerHTML = "* Password Atleast 5 Character";
                } 
                else
                {
                    document.getElementById('cpassErr').innerHTML = "";
                    cpassErr = false;
                }
            }

            if((cpassErr || passErr ) == true)
            {
                return false;
            }

        }

    </script>

  </body>
</html>
