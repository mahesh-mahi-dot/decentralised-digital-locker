    <script type="text/javascript">

        function contactvalidation()
        {
            let name = document.Form.cname.value;
            let email = document.Form.email.value;
            let phone = document.Form.phone.value;
            let wallet = document.Form.wallet.value;
            let password = document.Form.password.value;

            let nameErr = emailErr = passErr = phoneErr = walletErr = metaErr = true;

            if(name == "")
            {
                document.getElementById('nameErr').innerHTML = "* Please Enter Full Name";
            }
            else
            {
                var regex = /^[a-zA-Z\s]+$/;                
                if(regex.test(name) === false)
                {
                    document.getElementById('nameErr').innerHTML = "* Only Characters Allow";
                } 
                else
                {
                    document.getElementById('nameErr').innerHTML = "";
                    nameErr = false;      
                }
            }

            if(phone == "")
            {
                document.getElementById('phoneErr').innerHTML = "* Please Enter Mobile Number";
            }
            else
            {
                var regex = /^[0-9]\d{9}$/;
                if(regex.test(phone) === false)
                {
                    document.getElementById('phoneErr').innerHTML = "* Please Enter Valid 10 Digit Mobile Number";
                } 
                else
                {
                    document.getElementById('phoneErr').innerHTML = "";
                    phoneErr = false;
                }
            }

            if(password == "")
            {
                document.getElementById('passErr').innerHTML = "* Please Enter Password";
            }
            else
            {
                if(password.length < 5)
                {
                    document.getElementById('passErr').innerHTML = "* Password Atleast 5 Character";
                } 
                else
                {
                    document.getElementById('passErr').innerHTML = "";
                    passErr = false;
                }
            }
            if(wallet == "")
            {
                document.getElementById('walletErr').innerHTML = "* Please Enter the Wallet Address";
            }
            else
            {
                    document.getElementById('walletErr').innerHTML = "";
                    walletErr = false;
                }
            

            if(email == "")
            {
                document.getElementById('emailErr').innerHTML = "* Please Enter Email Address";
            }
            else
            {
                var regex = /^\S+@\S+\.\S+$/;
                if(regex.test(email) === false)
                {
                    document.getElementById('emailErr').innerHTML = "* Please Enter Valid Email";
                } 
                else
                {
                    document.getElementById('emailErr').innerHTML = "";
                    emailErr = false;
                }
            }
            if(meta == "")
            {
                document.getElementById('metaErr').innerHTML = "* Please Connect the MetaMask";
            }
            else
            {
                    document.getElementById('metaErr').innerHTML = "";
                    metaErr = false;
                }
  
            if((emailErr || passErr || nameErr || phoneErr || walletErr || metaErr ) == true)
            {
                return false;
            }

        }

    </script>
