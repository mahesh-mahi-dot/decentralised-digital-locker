                        <% } %> 

                        <% if(typeof error_msg!= 'undefined'){ %> 
                            <div class="alert alert-warning"><%= error_msg %> </div>
                        <% } %>
      
                        <form action="/register" method="POST" name="Form" onsubmit="return contactvalidation()">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                    <input type="text" class="form-control" name="cname" placeholder="Enter your Name">
                                    <span class="text-danger px-3 py-1 fst-normal" id="nameErr"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
