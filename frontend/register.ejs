                        <h4 class="text-center text-uppercase login-text">Register</h4>
                    </div>
                    <div class="card-body">
      
                        <% if(typeof errors!= 'undefined'){ %>
                                <% errors.forEach( error => { %>
                            <span class="alert alert-warning error-msg"><%= error.msg %></span> 
