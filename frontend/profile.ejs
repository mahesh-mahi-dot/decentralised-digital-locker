<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Digi-Locker</title>

    <link rel="icon" href="images/favicon.png" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="css/style.css">

    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> 

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    <style>
        .bg-blue
        {
            background-color: #023e8a;
        }
        .alert
        {
            padding: 6px 5px;
        }
    </style>
  </head>
  <body>

    <!-- Header Start -->
    <%- include('partials/header.ejs')%>
    <!-- Header End -->


    <!--- breadcrumb Section Start ---->
    
    <div class="breadcrumb-section" style="background-color:rgb(48, 115, 138);">
        <nav aria-label="breadcrumb">
          <h3>Profile</h3>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profile</li>
          </ol>
        </nav>
    </div> 
    
    <!--- breadcrumb Section End -->

    <!---- Profile Section Start ---->
    <div class="conatiner my-5">
        <div class="row">
            <div class="offset-2 col-lg-8 border">
                
                <div class="card"> 
                  <div class="card-body p-0">
                    <div class="row">
                        <% if(message){ %>
                            <div class="alert alert-<%= message.type %> text-center" role="alert">
                                <strong><%= message.message %></strong>
                            </div>
                        <% } %>
                      <div class="col-lg-4 bg-blue p-5 text-white">
                          <div class="bg-white">
                              <img class="img-fluid" src="/images/user1.png" alt="user image">
                          </div>
                          <h6 class="text-center my-4"><%= data.name %></h6>
                          <h6 class="text-center my-4"><%= data.email %></h6>
                      </div>
                      <div class="col-lg-8 text-dark bg-white p-5">
                        <form action="/profile" method="POST" name="Form" onsubmit="return contactvalidation()" autocomplete="off">
                          <div class="text-center">
                              <p class="text-center text-success"></p>
                              <h2 class="mb-4 text-uppercase text-secondary" style="border-bottom: 1px solid #dddada;">Profile Information</h2>
                              
                          </div>
                          
                          <input type="hidden" name="userId" value="<%= data._id %>">
                          <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                  <label class="form-label">User Name</label>
                                  <input type="text" class="form-control" name="cname" value="<%= data.name %>">
                                  <span class="text-danger px-3 py-1 fst-normal" id="nameErr"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                  <label class="form-label">Email Address</label>
                                  <input type="text" class="form-control" name="email" value="<%= data.email %>">
                                  <span class="text-danger px-3 py-1 fst-normal" id="emailErr"></span>
                                </div>
                            </div>
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Wallet-Address-Key</label>
                            <input type="text" class="form-control" name="wallet" value="<%= data.wallet %>">
                            <span class="text-danger px-3 py-1 fst-normal" id="walletErr"></span>
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" class="form-control" name="phone" value="<%= data.phone %>">
                            <span class="text-danger px-3 py-1 fst-normal" id="phoneErr"></span>
                          </div>
                          <div>
                            <button class="default-btn-1">Update Now</button>
                          </div>
                          
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </div>

    <!----- Profile Section End ---->

    <!---- Business Listing Start ---->
    <div class="container my-5">
        <h2 class="mb-4 text-uppercase text-secondary float-start" style="border-bottom: 1px solid #dddada;">Your's Document</h2>
        <a href="/listing" class="btn btn-primary float-end">Add Document</a>
        <table class="table">
            <thead class="bg-dark text-white">
                <tr role="row" class="text-white">
                    <th>Document Name</th>
                    <th>Document No</th>
                    <th>Document Id-No</th>
                    <th>Document</th>
                    <th>Timestamp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                <% if(bdata != ''){ %>
                  <% bdata.forEach((row, index) => { %>
                  <tr>
                    <td><%= row.cname %></td>
                    <td><%= row.docno %></td>
                    <td><%= row._id %></td>
                    <td> <a href="../<%= row.image %>" >View </a></td>
                    <td><%= row.date %></td>
                    <td>
                      <a href="/business/edit/<%= row._id %>" class="px-2"><i class="bx bxs-edit fa-lg text-success" aria-hidden="true"></i></a>
                      <a href="/business/delete/<%= row._id %>" class="px-2"><i class="fa fa-trash fa-lg text-danger" aria-hidden="true"></i></a>
                      <a href="../<%= row.image %>" class="px-2" onclick="password()" download="../<%= row.image %>" ><i class="fa fa-download"  aria-hidden="true" ></i></a>

                    </td>
                  </tr>
                  <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5"><h4 class="text-center my-5">No Any Document Listing Addded!!!</h4></td>
                    </tr>
                  <% } %>

            </tbody>
        </table>
    </div>
    <!---- Business Listing End ---->

    <!-- Footer Section --->
    <%- include('partials/footer.ejs')%>
    <!-- Footer Section --->


    <!-- Scripts -->

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>


</script>

    <script type="text/javascript">

        function contactvalidation()
        {
            let name = document.Form.cname.value;
            let email = document.Form.email.value;
            let phone = document.Form.phone.value;
            let wallet = document.Form.wallet.value;
            let nameErr = emailErr = phoneErr =  true;

            if(name == "")
            {
                document.getElementById('nameErr').innerHTML = "* Please Enter Full Name";
            }
            else
            {
                var regex = /^[a-zA-Z\s]+$/;                
                if(regex.test(name) === false)
                {
                    document.getElementById('nameErr').innerHTML = "* Only Characters Allow";
                } 
                else
                {
                    document.getElementById('nameErr').innerHTML = "";
                    nameErr = false;      
                }
            }

            if(phone == "")
            {
                document.getElementById('phoneErr').innerHTML = "* Please Enter Mobile Number";
            }
            else
            {
                var regex = /^[0-9]\d{9}$/;
                if(regex.test(phone) === false)
                {
                    document.getElementById('phoneErr').innerHTML = "* Please Enter Valid 10 Digit Mobile Number";
                } 
                else
                {
                    document.getElementById('phoneErr').innerHTML = "";
                    phoneErr = false;
                }
            }

            if(email == "")
            {
                document.getElementById('emailErr').innerHTML = "* Please Enter Email Address";
            }
            else
            {
                var regex = /^\S+@\S+\.\S+$/;
                if(regex.test(email) === false)
                {
                    document.getElementById('emailErr').innerHTML = "* Please Enter Valid Email Address";
                } 
                else
                {
                    document.getElementById('emailErr').innerHTML = "";
                    emailErr = false;
                }
            }
            if(wallet == "")
            {
                document.getElementById('walletErr').innerHTML = "* Please Enter Wallet Address";
            }
            else
            {
                if(wallet.length < 20)
                {
                    document.getElementById('walletErr').innerHTML = "* wallet Atleast 20 Character";
                } 
                else
                {
                    document.getElementById('walletErr').innerHTML = "";
                    walletErr = false;
                }
            }

            if((nameErr || emailErr || phoneErr || walletErr) == true)
            {
                return false;
            }

        }
        function password(){
          if(password === password){
            alert('You downoload')
          }
          else{
            alert('Please enter Correct password')
          }
        }
    </script>

  </body>
</html>
